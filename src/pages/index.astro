    <section>
      <SectionHeader>Toluwalase.</SectionHeader>
      <div class="flex justify-end">
        <h4
          class="w-max text-[11px] text-right font-medium bg-slate-800 text-slate-300 bg-opacity-30 space-grotesk -space-y-1 -mt-1 px-2 py-1 rounded uppercase"
        >
          frontend developer
        </h4>
      </div>
    </section>
    <footer class="flex justify-between">
      <section class="flex flex-col gap-3">
        <Link href="/about" newTab={false}>About</Link>
