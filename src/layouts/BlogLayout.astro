---
import BackHome from "../components/BackHome.astro";
import MinimalFooter from "../components/MinimalFooter.astro";
import "../styles/global.css";
export interface Props {
  title: string;
}

let { title, description: desc, keywords, date } = Astro.props?.frontmatter;
if (!title) title = "Toluwalase";
if (!desc)
  desc =
    "A portal into my thoughts, thoughts, experiences, ideas, visions, and more. What's the point of this? Well, I'm not sure, but here you go anyhow.";
if (!keywords) keywords = "toluwalase, tolu, kalejaiye, tolufbg, tolu0x, developer, engineer, html, css, javascript, react, tailwind, typescript";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="theme-color" content="#171717" />
    <meta name="description" content={desc} />
    <meta name="keywords" content={keywords} />
    <link rel="icon" type="image/x-icon" href="/images/favicon-32x32.png" />

    <meta property="og:type" content="website" />
    <meta property="og:url" content="" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:image" content="/images/favicon-32x32.png" />

    <meta property="twitter:card" content="" />
    <meta property="twitter:url" content="" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={desc} />
    <meta property="twitter:image" content="/images/favicon-32x32.png" />

    <meta property="og:site_name" content="" />
    <meta property="og:site" content="" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={desc} />
    <meta property="og:image" content="/images/favicon-32x32.png" />
    <meta property="og:url" content="" />
    <title>{title}</title>
  </head>
  <body class="w-[88vw] pt-6 pb-10 mx-auto">
    <main class="w-full lg:w-3/5 2xl:w-3/6 mx-auto -mt-3">
      <BackHome url="/blog" />
      <div class="flex flex-col gap-2">
        <h1 class="text-4xl">{title}</h1>
        {date && <p class="text-gray-500 font-medium text-xs">{date}</p>}
        <hr class="my-4" />
      </div>
      <section class="blog-content">
        <slot />
      </section>
      <MinimalFooter />
    </main>
  </body>
</html>
